package com.company;
import java.util.*;
public class Main {

    public static void main(String[] args) {
	Scanner sc= new Scanner(System.in);
    System.out.println("kdv si hesaplanacak para değerini giriniz");
    double price= sc.nextDouble();
    double kdv;
    if((price>=0)&&(price<=1000)){
        kdv= price*0.18;
        System.out.println("kdv miktarı  :"+ kdv);
        System.out.println("toplam ödenecek değer :" +(price+kdv));
    }else{
        kdv= price*0.08;
        System.out.println("kdv miktarı  :"+ kdv);
        System.out.println("toplam ödenecek değer :" +(price+kdv));
    }
    }
}
